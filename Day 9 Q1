#include <stdio.h>
#include <string.h>

void reverse(char str[], int start, int end) {
    if (start >= end)
        return;

    char temp = str[start];
    str[start] = str[end];
    str[end] = temp;

    reverse(str, start + 1, end - 1);
}

int main() {
    char str[100];

    printf("Enter code name: ");
    scanf("%s", str);

    int n = strlen(str);
    reverse(str, 0, n - 1);

    printf("Mirror format: %s", str);
    return 0;
}
